<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="colorSecondary">@color/colorAccent</item>
		<item name="colorDivider">@color/colorDivider</item>
		<item name="colorOnPrimary">@color/white</item>
		<item name="actionBarBackground">?attr/colorPrimary</item>
		<item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
		<item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
		<item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialAlertDialog.Rounded</item>
		<item name="android:dialogTheme">@style/ThemeOverlay.MaterialAlertDialog.Rounded</item>
		<item name="android:alertDialogTheme">@style/ThemeOverlay.MaterialAlertDialog.Rounded</item>
		<item name="dialogCornerRadius">@dimen/radius_dialog_corner_rounded</item>
		<item name="android:windowAnimationStyle">@style/WindowFadeTransition</item>
	</style>

	<style name="ThemeOverlay.MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
		<item name="alertDialogStyle">@style/MaterialAlertDialog.Rounded</item>
		<item name="materialAlertDialogTitleTextStyle">@style/MaterialDialog.MaterialComponents.Title.Text</item>
	</style>

	<style name="MaterialAlertDialog.Rounded" parent="MaterialAlertDialog.MaterialComponents">
		<item name="shapeAppearance">@style/ShapeAppearance.MaterialAlertDialog.Rounded</item>
	</style>

	<style name="ShapeAppearance.MaterialAlertDialog.Rounded" parent="">
		<item name="cornerSize">@dimen/radius_dialog_corner_rounded</item>
	</style>

	<style name="MaterialDialog.MaterialComponents.Title.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
		<item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Title</item>
	</style>
	
	<style name="TextAppearance.MaterialComponents.Title" parent="">
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

	<style name="AppTheme.Launcher">
		<item name="android:windowBackground">@drawable/app_splash</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>

	<style name="AppTheme.Launcher.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemeUntis">
		<item name="colorPrimary">@color/colorPrimaryThemeUntis</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkThemeUntis</item>
		<item name="colorAccent">@color/colorAccentThemeUntis</item>
		<item name="colorSecondary">@color/colorAccentThemeUntis</item>
	</style>

	<style name="AppTheme.ThemeBlue">
		<item name="colorPrimary">@color/colorPrimaryThemeBlue</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkThemeBlue</item>
		<item name="colorAccent">@color/colorAccentThemeBlue</item>
		<item name="colorSecondary">@color/colorAccentThemeBlue</item>
	</style>

	<style name="AppTheme.ThemeGreen">
		<item name="colorPrimary">@color/colorPrimaryThemeGreen</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkThemeGreen</item>
		<item name="colorAccent">@color/colorAccentThemeGreen</item>
		<item name="colorSecondary">@color/colorAccentThemeGreen</item>
	</style>

	<style name="AppTheme.ThemePink">
		<item name="colorPrimary">@color/colorPrimaryThemePink</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkThemePink</item>
		<item name="colorAccent">@color/colorAccentThemePink</item>
		<item name="colorSecondary">@color/colorAccentThemePink</item>
	</style>

	<style name="AppTheme.ThemeCyan">
		<item name="colorPrimary">@color/colorPrimaryThemeCyan</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDarkThemeCyan</item>
		<item name="colorAccent">@color/colorAccentThemeCyan</item>
		<item name="colorSecondary">@color/colorAccentThemeCyan</item>
	</style>

	<style name="AppTheme.ThemePixel">
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
		<item name="colorPrimary">@color/colorPrimaryThemePixel</item>
		<item name="colorPrimaryDark">@color/appBarColorThemePixel</item>
		<item name="colorAccent">@color/colorAccentThemePixel</item>
		<item name="colorSecondary">@color/colorAccentThemePixel</item>
		<item name="android:statusBarColor">@color/appBarColorThemePixel</item>
		<item name="actionBarBackground">@color/appBarColorThemePixel</item>
		<item name="actionBarTheme">@style/PixelActionBarTheme</item>
		<item name="actionBarStyle">@style/PixelActionBarStyle</item>
	</style>

	<style name="PixelActionBarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
		<item name="colorControlNormal">?android:attr/textColorSecondary</item>
	</style>

	<style name="PixelActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
		<item name="background">?attr/actionBarBackground</item>
	</style>

	<style name="AppTheme.ThemeUntis.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemeBlue.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemeGreen.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemePink.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemeCyan.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.ThemePixel.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="WindowFadeTransition">
		<item name="android:windowEnterAnimation">@android:anim/fade_in</item>
		<item name="android:windowExitAnimation">@android:anim/fade_out</item>
	</style>

	<style name="DefaultItemStyle">
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:paddingTop">@dimen/margin_listitem_text_vertical</item>
		<item name="android:paddingStart">@dimen/margin_listitem_text</item>
		<item name="android:paddingBottom">@dimen/margin_listitem_text_vertical</item>
		<item name="android:paddingEnd">@dimen/margin_listitem_text</item>
	</style>

	<style name="ElementPickerDialogSelectionItemStyle">
		<item name="android:layout_marginStart">8dp</item>
		<item name="android:layout_marginEnd">8dp</item>
		<item name="android:background">?attr/selectableItemBackgroundBorderless</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:gravity">center</item>
		<item name="android:tint">?android:attr/textColorPrimary</item>
	</style>

	<style name="FabStyle">
		<item name="android:layout_margin">16dp</item>
		<item name="android:backgroundTint">?attr/colorPrimary</item>
		<item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
		<item name="android:gravity">center</item>
	</style>
</resources>
