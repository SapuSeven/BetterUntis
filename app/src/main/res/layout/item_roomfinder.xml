<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:background="?android:attr/selectableItemBackground"
	android:minHeight="60dp">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/imageview_roomfinder_state"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_centerVertical="true"
		android:layout_marginStart="16dp"
		android:contentDescription="@string/roomfinder_image_availability_indicator"
		app:srcCompat="@android:color/transparent"/>

	<ProgressBar
		android:id="@+id/progressbar_roomfinder_loading"
		style="?android:attr/progressBarStyle"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_centerVertical="true"
		android:layout_marginStart="16dp"
		android:visibility="gone"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginEnd="72dp"
		android:layout_marginLeft="72dp"
		android:layout_marginRight="72dp"
		android:layout_marginStart="72dp"
		android:orientation="vertical">

		<TextView
			android:id="@+id/textview_roomfinder_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="?android:attr/textColorPrimary"
			android:textSize="13sp"/>

		<TextView
			android:id="@+id/textview_roomfinder_details"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="?android:attr/textColorSecondary"
			android:textSize="13sp"/>
	</LinearLayout>

	<ImageButton
		android:id="@+id/button_roomfinder_delete"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:layout_marginEnd="16dp"
		android:background="?attr/selectableItemBackgroundBorderless"
		android:contentDescription="@string/roomfinder_delete_item"
		app:srcCompat="@drawable/roomfinder_delete"/>

</RelativeLayout>
